{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "plugins": ["stylelint-selector-bem-pattern"],
  "rules": {
    "selector-class-pattern": null,
    "plugin/selector-bem-pattern": {
      "preset": "bem",
      "implicitComponents": ["src/components/**/*.css"]
    }
  }
}
